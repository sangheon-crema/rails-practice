<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", "/articles/edit/#{@article.id}" %></li>
  <li>
    <%= link_to "Destroy", "/articles/#{@article.id}", data: {
      method: :delete,
      confirm: "Are you sure?"
    } %>
  </li>
</ul>

<h2>Comments!</h2>

<ul>
<% @article.comments.each do |comment| %>
<li><%= comment.commenter %>: <%= comment.body %> </li>
<% end %>
</ul>

<%= form_with model: [@article, @article.comments.build], url: "/comments/#{@article.id}" do |form| %>
<p>
<%= form.label "Commenter" %><br />
<%= form.text_field :commenter %>
</p>
<p>
<%= form.label "Body" %><br />
<%= form.text_area :body %>
</p>
<p><%= form.submit %></p>
<% end %>
